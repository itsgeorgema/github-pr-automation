{
  "family": "mcp-github-reviewer-express-production",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::${AWS::AccountId}:role/mcp-express-exec-role-production",
  "taskRoleArn": "arn:aws:iam::${AWS::AccountId}:role/mcp-express-task-role-production",
  "containerDefinitions": [
    {
      "name": "mcp-github-reviewer-express",
      "image": "${AWS::AccountId}.dkr.ecr.${AWS::Region}.amazonaws.com/mcp-github-reviewer-express:latest",
      "portMappings": [
        {
          "containerPort": 8000,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "environment": [
        {
          "name": "NODE_ENV",
          "value": "production"
        },
        {
          "name": "PORT",
          "value": "8000"
        },
        {
          "name": "HOST",
          "value": "0.0.0.0"
        },
        {
          "name": "AI_PROVIDER",
          "value": "openai"
        }
      ],
      "secrets": [
        {
          "name": "OPENAI_API_KEY",
          "valueFrom": "arn:aws:secretsmanager:${AWS::Region}:${AWS::AccountId}:secret:mcp-server/openai-key"
        },
        {
          "name": "GITHUB_TOKEN",
          "valueFrom": "arn:aws:secretsmanager:${AWS::Region}:${AWS::AccountId}:secret:mcp-server/github-token"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/mcp-github-reviewer-express-production",
          "awslogs-region": "${AWS::Region}",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": ["CMD-SHELL", "curl -f http://localhost:8000/health || exit 1"],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ]
}
