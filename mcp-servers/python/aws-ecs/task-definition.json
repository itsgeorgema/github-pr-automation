{
  "family": "mcp-github-reviewer-production",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::${AWS::AccountId}:role/mcp-task-execution-role-production",
  "taskRoleArn": "arn:aws:iam::${AWS::AccountId}:role/mcp-task-role-production",
  "containerDefinitions": [
    {
      "name": "mcp-server",
      "image": "${AWS::AccountId}.dkr.ecr.${AWS::Region}.amazonaws.com/mcp-github-reviewer:latest",
      "portMappings": [
        {
          "containerPort": 8000,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "environment": [
        {
          "name": "AI_PROVIDER",
          "value": "openai"
        },
        {
          "name": "PORT",
          "value": "8000"
        },
        {
          "name": "HOST",
          "value": "0.0.0.0"
        }
      ],
      "secrets": [
        {
          "name": "OPENAI_API_KEY",
          "valueFrom": "arn:aws:secretsmanager:${AWS::Region}:${AWS::AccountId}:secret:mcp-server/openai-key"
        },
        {
          "name": "GITHUB_TOKEN",
          "valueFrom": "arn:aws:secretsmanager:${AWS::Region}:${AWS::AccountId}:secret:mcp-server/github-token"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/mcp-github-reviewer-production",
          "awslogs-region": "${AWS::Region}",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}
