{
  "name": "github-pr-automation",
  "version": "1.0.0",
  "description": "Comprehensive GitHub PR automation with linting, formatting, and AI review",
  "main": "index.js",
  "scripts": {
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx,.json,.yml,.yaml,.md,.mdx --fix",
    "lint:check": "eslint . --ext .js,.jsx,.ts,.tsx,.json,.yml,.yaml,.md,.mdx",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,jsonc,md,mdx,html,css,scss,less,yml,yaml,xml,svg}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,jsonc,md,mdx,html,css,scss,less,yml,yaml,xml,svg}\"",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prepare": "husky install",
    "pre-commit": "lint-staged",
    "validate": "npm run lint:check && npm run format:check && npm run type-check"
  },
  "devDependencies": {
    "@next/eslint-plugin-next": "^15.5.2",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "eslint": "^9.34.0",
    "eslint-config-next": "^15.5.2",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest": "^28.9.0",
    "eslint-plugin-jsonc": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-mdx": "^3.1.5",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-testing-library": "^7.1.0",
    "eslint-plugin-yml": "^1.15.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jsonc-eslint-parser": "^2.4.0",
    "lint-staged": "^15.2.10",
    "prettier": "^3.6.2",
    "typescript": "^5.7.2",
    "yaml-eslint-parser": "^1.2.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,jsonc,md,mdx,html,css,scss,less,yml,yaml}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "github",
    "automation",
    "eslint",
    "prettier",
    "typescript",
    "react",
    "nextjs",
    "ai",
    "code-review"
  ],
  "author": "",
  "license": "MIT"
}
